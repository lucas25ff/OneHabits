<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondoxd"
    tools:context=".settings">


    <View
        android:id="@+id/view"
        android:layout_width="98dp"
        android:layout_height="97dp"
        android:layout_marginStart="152dp"

        android:layout_marginTop="144dp"
        android:background="@drawable/edit_text_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="672dp"
        android:fontFamily="@font/staatliches_regular"
        android:text="Calendario"
        android:onClick="goCalendar"
        android:textColor="@color/yellow"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="276dp"
        android:layout_marginTop="672dp"
        android:fontFamily="@font/staatliches_regular"
        android:text="Ajustes"
        android:textColor="@color/yellow"
        android:textSize="24dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/edit" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="672dp"
        android:fontFamily="@font/staatliches_regular"
        android:onClick="goDash"
        android:text="Inicio"
        android:textColor="@color/yellow"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="428dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/arrow" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        style="@style/borderEditTextLight"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="272dp"
        android:ems="10"
        android:hint="Nombre del habito"
        android:inputType="textEmailAddress"
        android:text="ppedersoli@gmail.com"
        android:textColor="@color/lightyellow"
        android:textColorHint="@color/lightyellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/staatliches_regular"
        android:text="Ajustes"
        android:textColor="@color/yellow"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        style="@style/borderEditText"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="344dp"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="textPassword"
        android:text="holaprofe"
        android:textColor="@color/lightyellow"
        android:textColorHint="@color/lightyellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveSettingsBtn"
        android:layout_width="184dp"
        android:layout_height="49dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="496dp"
        android:backgroundTint="@color/yellow"
        android:text="MODIFICAR"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTime"
        style="@style/borderEditText"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="416dp"
        android:ems="10"
        android:hint="Hora"
        android:inputType="text"
        android:text="Español (latinoamericano)"
        android:textColor="@color/lightyellow"
        android:textColorHint="@color/lightyellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logOutsBtn"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="560dp"
        android:backgroundTint="@color/yellow"
        android:text="CERRAR SESIÓN"
        android:textSize="20sp"
        android:onClick="goLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="356dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/edit" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/staatliches_regular"
        android:text="P"
        android:textSize="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>